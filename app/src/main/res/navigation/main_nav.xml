<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/chooseRegion">

    <fragment
        android:id="@+id/chooseRegion"
        android:name="com.example.a1stproject.region.ChooseRegion"
        android:label="fragment_choose_region"
        tools:layout="@layout/fragment_choose_region" >
        <action
            android:id="@+id/action_chooseRegion_to_forecastView"
            app:destination="@id/forecastView" />
    </fragment>
    <fragment
        android:id="@+id/forecastView"
        android:name="com.example.a1stproject.forecast.ForecastView"
        android:label="fragment_forecast_view"
        tools:layout="@layout/fragment_forecast_view" >
        <action
            android:id="@+id/action_forecastView_to_chooseRegion"
            app:destination="@id/chooseRegion" />
        <action
            android:id="@+id/action_forecastView_to_detailsActivity"
            app:destination="@id/detailsActivity" />
    </fragment>
    <activity
        android:id="@+id/detailsActivity"
        android:name="com.example.a1stproject.Detail.DetailsActivity"
        android:label="activity_details"
        tools:layout="@layout/activity_details" />
</navigation>